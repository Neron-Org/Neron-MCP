[Unit]
Description=Neron Fake OAuth Server
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/home/Neron-MCP
Environment="PATH=/home/Neron-MCP/venv/bin"
ExecStart=/home/Neron-MCP/venv/bin/python3 /home/Neron-MCP/fake_oauth_server.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
